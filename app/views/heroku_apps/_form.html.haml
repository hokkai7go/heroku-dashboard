= form_for @heroku_app do |f|
  - if @heroku_app.errors.any?
    #error_explanation
      %h2= "#{pluralize(@heroku_app.errors.count, "error")} prohibited this heroku_app from being saved:"
      %ul
        - @heroku_app.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
